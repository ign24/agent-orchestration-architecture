{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://factor.com.ar/workflow-schema.json",
  "title": "Factor Workflow Schema",
  "description": "Schema for multi-skill workflows with checkpoints and state persistence",
  "type": "object",
  "required": ["name", "version", "phases"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Workflow identifier (kebab-case)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "description": "Global inputs for the workflow",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "required": { "type": "boolean" },
            "default": {},
            "description": { "type": "string" }
          }
        }
      }
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "skill"],
        "properties": {
          "name": { 
            "type": "string",
            "description": "Human-readable phase name"
          },
          "skill": { 
            "type": "string",
            "description": "Skill to execute (must exist in registry)"
          },
          "inputs": { 
            "type": "object",
            "description": "Inputs specific to this phase (merged with global)"
          },
          "checkpoint": {
            "type": "boolean",
            "default": false,
            "description": "Whether to pause for human confirmation after this phase"
          },
          "checkpoint_message": { 
            "type": "string",
            "description": "Message to show at checkpoint"
          },
          "condition": {
            "type": "object",
            "description": "Condition for executing this phase",
            "properties": {
              "type": { 
                "type": "string", 
                "enum": ["input_equals", "input_truthy", "previous_success", "file_exists"]
              },
              "key": { "type": "string" },
              "value": {},
              "path": { "type": "string" }
            }
          },
          "on_failure": {
            "type": "string",
            "enum": ["stop", "continue", "skip_remaining"],
            "default": "stop"
          },
          "timeout": {
            "type": "integer",
            "description": "Overall timeout for this phase in seconds"
          }
        }
      }
    },
    "on_complete": {
      "type": "object",
      "description": "Actions to take when workflow completes",
      "properties": {
        "update_context": {
          "type": "boolean",
          "default": true,
          "description": "Update PROJECT_CONTEXT.md"
        },
        "notify": {
          "type": "boolean",
          "default": false
        },
        "next_workflow": {
          "type": "string",
          "description": "Workflow to suggest next"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "created": { "type": "string" },
        "updated": { "type": "string" },
        "estimated_duration": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
